<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.autowanglei.progressbar.ProgressBarsActivity">

    <Button
        android:id="@+id/straight_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水平进度条"/>
    <Button
        android:id="@+id/cirle_btn"
        android:layout_below="@+id/straight_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环形进度条"/>
    <Button
        android:id="@+id/roll_btn"
        android:layout_below="@+id/cirle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环形滚动进度条"/>
    <Button
        android:id="@+id/gradual_circle_btn"
        android:layout_below="@+id/roll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="环形渐变进度条"/>
</RelativeLayout>
