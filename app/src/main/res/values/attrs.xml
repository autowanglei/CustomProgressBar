<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="circle_progress">
        <attr name="round_bg_color" format="color"/>
        <attr name="round_progress_color" format="color"/>
        <attr name="round_width" format="dimension"></attr>
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="max_value" format="integer"></attr>
        <attr name="display_text" format="boolean"></attr>
        <attr name="style">
        <enum name="STROKE" value="0"></enum>
        <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable> 
</resources>
